@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BillMealMVC.Models.CartHead
    <div class="container">
        <hr /><hr />
        <form action="https://www.paypal.com/cgi-bin/webscr" method="post" name="Paypal">
            <input type="hidden" name="cmd" value="_xclick">
            <input type="hidden" name="business" value="a.zichittella@gmail.com">
            <input type="hidden" name="invoice" value="Ordine #@Model.CartId">
            <input type="hidden" name="item_name" value="Ordine #@Model.CartId">
            <input type="hidden" name="currency_code" value="EUR">
            <input type="hidden" name="amount" value="@Model.ConfirmedTotal.ToString().Replace(",",".")">
            <input type="hidden" name="return" value="http://@ViewBag._settings.ApplicationPath/checkout/payment?order=@Model.CartId">
            <input type="hidden" name="cancel_return" value="http://@ViewBag._settings.ApplicationPath/checkout/paymentcanceled?order=@Model.CartId">
            <input type="hidden" name="rm" value="2">
            <input type="hidden" name="lc" value="IT">
            <Input type="submit" name="Go" Value="Paga con Paypal">
        </form>
    </div>